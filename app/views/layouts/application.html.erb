<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <strong><%#= link_to current_user.username, auth_show_path %></strong>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class:'nav-link text-white' %>
                <%= link_to ' ホーム', user_path(current_user.id), class: ' nav-link text-white' %>
              <% else %>
                <%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-white' %>
                <%= link_to ' ホーム', root_path, class: 'fas fa-home nav-link text-white' %>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>